# Configuration principale pour le domaine en production
{$APP_DOMAIN} {
    # Configuration des logs
    log {
        output stdout
        level INFO
    }
    
    # Headers de sécurité
    header {
        # Sécurité
        X-Content-Type-Options nosniff
        X-Frame-Options DENY
        X-XSS-Protection "1; mode=block"
        Referrer-Policy strict-origin-when-cross-origin
        
        # CORS pour l'API
        Access-Control-Allow-Origin "*"
        Access-Control-Allow-Methods "GET, POST, PUT, DELETE, PATCH, OPTIONS"
        Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With"
    }
    
    # Routes API - proxy vers le backend Go (port 8080)
    # Toutes les routes backend sans préfixe /api
    handle /auth* {
        reverse_proxy api:8080 {
            header_up Host {host}
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}
        }
    }
    
    handle /devis* {
        reverse_proxy api:8080 {
            header_up Host {host}
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}
        }
    }
    
    handle /clients* {
        reverse_proxy api:8080 {
            header_up Host {host}
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}
        }
    }
    
    handle /factures* {
        reverse_proxy api:8080 {
            header_up Host {host}
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}
        }
    }
    
    handle /plannings* {
        reverse_proxy api:8080 {
            header_up Host {host}
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}
        }
    }
    
    handle /entreprises* {
        reverse_proxy api:8080 {
            header_up Host {host}
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}
        }
    }
    
    handle /salaries* {
        reverse_proxy api:8080 {
            header_up Host {host}
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}
        }
    }
    
    handle /profile* {
        reverse_proxy api:8080 {
            header_up Host {host}
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}
        }
    }
    
    # Servir les fichiers statiques du React build
    root * /usr/share/web
    file_server
    
    # SPA fallback - renvoie index.html pour toutes les routes React
    # (pour le routing côté client avec React Router)
    try_files {path} /index.html
}

# Configuration pour localhost en développement
localhost {
    log {
        output stdout
        level DEBUG
    }
    
    # Headers CORS plus permissifs pour le dev
    header {
        Access-Control-Allow-Origin "*"
        Access-Control-Allow-Methods "GET, POST, PUT, DELETE, PATCH, OPTIONS"
        Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With"
    }
    
    # Même configuration API que production
    handle /auth* {
        reverse_proxy api:8080
    }
    
    handle /devis* {
        reverse_proxy api:8080
    }
    
    handle /clients* {
        reverse_proxy api:8080
    }
    
    handle /factures* {
        reverse_proxy api:8080
    }
    
    handle /plannings* {
        reverse_proxy api:8080
    }
    
    handle /entreprises* {
        reverse_proxy api:8080
    }
    
    handle /salaries* {
        reverse_proxy api:8080
    }
    
    handle /profile* {
        reverse_proxy api:8080
    }
    
    # Frontend
    root * /usr/share/web
    file_server
    try_files {path} /index.html
}
